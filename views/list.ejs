<%- include("header") -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">


  <% newtodoItems.forEach(function(newtodoItem){ %>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%= newtodoItem._id %>" onChange="this.form.submit()">
      <p> <%=  newtodoItem.name  %> </p>
    </div>
    <input type="hidden" name="listName" value="<%= listTitle %>">
  </form>
  <%});%>

  <form class="item" action="/" method="post">
    <input type="text" name="todoItem" placeholder="New item" autocomplete="off" />
    <button type="submit" name="list" value=<%= listTitle %>>+</button>
  </form>
</div>

<%- include("footer") -%>